<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gunit.spacecrack.GameActivity$PlaceholderFragment">

    <include layout="@layout/background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/default_size"
            android:layout_height="@dimen/default_size"
            android:scaleType="centerCrop"
            android:id="@+id/img_edit_profile_profilepicture"
            android:src="@drawable/ic_contact_picture"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_size"
            android:orientation="vertical"
            android:gravity="center">
            <EditText
                android:layout_width="@dimen/default_size"
                android:layout_height="wrap_content"
                android:id="@+id/edt_profile_first_name"
                android:inputType="textPersonName"
                android:hint="@string/first_name"/>

            <EditText
                android:layout_width="@dimen/default_size"
                android:layout_height="wrap_content"
                android:id="@+id/edt_profile_last_name"
                android:inputType="textPersonName"
                android:hint="@string/last_name"/>

            <Button
                android:layout_width="@dimen/default_size"
                android:layout_height="wrap_content"
                android:text="@string/birth_date"
                android:id="@+id/btn_profile_date"/>

            <IconButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/btn_profile_save"
                android:text="{fa-floppy-o}"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
